//Calculator  @author EmreHatip
import java.util.Scanner;
public class Calculator {
    public static void main(String[] args) {
        int n1,n2,op;
            Scanner input=new Scanner(System.in);
            System.out.println("Please write first number");
            n1=input.nextInt();
            System.out.println("Please write second number");
            n2=input.nextInt();
            System.out.println("Choose your transaction\n1:Addition\n2:Deduction\n3:Multiplication\n4:Division");
            op=input.nextInt();
                switch (op){
                    case 1: System.out.println("Addition Result:"+(n1+n2));
                        break;
                    case 2: System.out.println("Deduction Result:"+(n1-n2));
                        break;
                    case 3: System.out.println("Multiplication Result:"+(n1*n2));
                        break;
                    case 4: System.out.println("Division Result:"+(n1/n2));
                        break;
                    default:
                        System.out.println("Incorrect Entry!");
            }
    }
}
